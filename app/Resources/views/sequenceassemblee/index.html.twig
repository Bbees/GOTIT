{% extends 'index.html.twig' %}

{# INDEX : SEQUENCE ASSEMBLEE #}

{# initialise le tableau des entitées liées ([entity1,entity2 ... ])  vers lesquelles on souhaite faire un lien-racourcis  
1) le tableau des resulatats devra comprendre un collonne du type : <th data-column-id="linkEntity" data-formatter="linkEntity" data-sortable="false">Col.</th>
2) le controller devra renvoyer dans le tableau rows les collones du type :  "linkEntity1" => "patern1" ,  "linkeEntity2" => "patern2" ... #}
{% set links =  [] %}

{% block action %}
    {{ parent() }}
    <a href="{{ path( route_importfiles ) }}" class="btn btn-primary btn-sm" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
{% endblock %} 

{% block body %}     
    {# definition des collones à afficher 
    RQ! pour les collones sortable suffixer les nom de champs par le nom des tables nomTable.nomChamp #} 
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="sequenceAssemblee.id" data-type="numeric" data-visible="false">Id</th>
                <th data-column-id="individu.codeIndBiomol" data-type="date" data-visible="false">{{'Code ind biomol'|trans}}</th>
                <th data-column-id="sequenceAssemblee.codeSqcAss" data-sortable="true" data-visible="true">{{'Code sqc ass'|trans}}</th> 
                <th data-column-id="sequenceAssemblee.codeSqcAlignement" data-sortable="true" data-visible="false">{{'Code sqc alignement'|trans}}</th>
                <th data-column-id="vocGene.code" data-sortable="true">{{'Gene voc fk'|trans}}</th>
                <th data-column-id="vocStatutSqcAss.code" data-sortable="true" data-visible="true">{{'Statut sqc ass voc fk'|trans}}</th>                
                <th data-column-id="sequenceAssemblee.dateCreationSqcAss" data-type="date">{{'Date creation sqc ass'|trans}}</th>
                <th data-column-id="lastTaxname" data-sortable="false" data-visible="true">{{'list.Last taxname'|trans}}</th>                 
                <th data-column-id="codeIdentification" data-sortable="false" data-visible="false">{{'list.Last identification critere'|trans}}</th>
                <th data-column-id="sequenceAssemblee.dateMaj" data-width="100">{{'list.Date maj'|trans}}</th>
                <th data-column-id="sequenceAssemblee.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false"   data-width="20">Show</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false"  data-width="20">Edit</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">Del</th> 
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}
