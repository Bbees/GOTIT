{% extends 'index.html.twig' %}

    {# initialise le tableau des entitées liées ([entity1,entity2 ... ])  vers lesquelles on souhaite faire un lien-racourcis  
    1) le tableau des resulatats devra comprendre un collonne du type : <th data-column-id="linkEntity" data-formatter="linkEntity" data-sortable="false">Col.</th>
    2) le controller devra renvoyer dans le tableau rows les collones du type :  "linkEntity1" => "patern1" ,  "linkeEntity2" => "patern2" ...
    ?nameFk={{nameOfEntity}}Fk&idFk= #}
    {% set links =  [] %}

{% block action %}
    {{ parent() }}
{% endblock %}

{% block body %}         
    {# definition des collones à afficher 
     ! pour les collones sortable suffixer les nom de champs par le nom des tables nomTable.nomChamp #}
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="user.id" data-type="numeric" data-visible="false" >Id</th>
                <th data-column-id="user.username" data-sortable="true">{{'Username'|trans}}</th>               
                <th data-column-id="user.password" data-sortable="true">{{'Password'|trans}}</th>
                <th data-column-id="user.email" data-sortable="true">{{'Email'|trans}}</th>
                <th data-column-id="user.role" data-sortable="true">{{'Role'|trans}}</th>
                <th data-column-id="user.name" data-sortable="true">{{'Name'|trans}}</th> 
                <th data-column-id="user.institution" data-sortable="true">{{'Institution'|trans}}</th> 
                <th data-column-id="user.commentaireUser" data-sortable="false" data-visible="false">{{'Commentaire User'|trans}}</th> 
                <th data-column-id="user.dateMaj" data-width="100" data-visible="true">{{'list.Date maj'|trans}}</th>
                <th data-column-id="user.dateCre" data-width="100" data-visible="true">{{'list.Date cre'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false" data-width="20">Show</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false" data-width="20">Edit</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">Del</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}
