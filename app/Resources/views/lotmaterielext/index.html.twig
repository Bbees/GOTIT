{% extends 'index.html.twig' %}

{# INDEX : LOT MATERIEL EXT #}

{# initialise le tableau des entitées liées ([entity1,entity2 ... ])  vers lesquelles on souhaite faire un lien-racourcis  
1) le tableau des resulatats devra comprendre un collonne du type : <th data-column-id="linkEntity" data-formatter="linkEntity" data-sortable="false">Col.</th>
2) le controller devra renvoyer dans le tableau rows les collones du type :  "linkEntity1" => "patern1" ,  "linkeEntity2" => "patern2" ... #}
{% set links =  [] %}

{% block action %}
    {{ parent() }}
    <a href="{{ path( route_importfiles ) }}" class="btn btn-primary btn-sm" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
{% endblock %} 

{% block body %}
     
    {# definition des collones à afficher 
    RQ! pour les collones sortable suffixer les nom de champs par le nom des tables nomTable.nomChamp #} 
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="lotMaterielExt.id" data-type="numeric" data-visible="false">Id</th>
                <th data-column-id="collecte.codeCollecte" data-sortable="true">{{'Code collecte'|trans}}</th>                
                <th data-column-id="lotMaterielExt.codeLotMaterielExt" data-sortable="true">{{'Code lot materiel ext'|trans}}</th>                
                <th data-column-id="lotMaterielExt.dateCreationLotMaterielExt" data-type="date">{{'list.Date creation lot materiel'|trans}}</th>
                <th data-column-id="listePersonne" data-sortable="false" data-visible="true">{{'list.Liste personnes'|trans}}</th>
                <th data-column-id="lastTaxname" data-sortable="true" data-visible="false">{{'list.Last taxname'|trans}}</th> 
                <th data-column-id="pays.nomPays" data-type="date" data-visible="false">{{'Nom pays'|trans}}</th>
                <th data-column-id="commune.codeCommune"  data-visible="false">{{'Code commune'|trans}}</th>
                <th data-column-id="lotMaterielExt.dateMaj" data-width="100">{{'list.Date maj'|trans}}</th>
                <th data-column-id="lotMaterielExt.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false"   data-width="20">Show</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false"  data-width="20">Edit</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">Delete</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}

