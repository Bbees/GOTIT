{# Formulaire 2 #}

<form id="query2Form" action="#">
  <fieldset>
    <legend>
      <h3>Référence</h3>
    </legend>
    <div class="panel-group" id="form-accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="radio">
            <label class="control-label">
              <input type='radio' name='reference' value="0" checked="checked" data-toggle="collapse" data-target="#morpho" data-parent="#form-accordion">
              <strong>Morphologie</strong>
            </label>
          </div>
        </div>
        <div class="collapse panel-collapse in" id="morpho"></div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="radio">
            <label class="control-label">
              <input type='radio' name='reference' value="1" data-toggle="collapse" data-target="#taxon-collapse" data-parent="#form-accordion">
              <strong>Morphologie par taxon</strong>
            </label>
          </div>
        </div>

        <div class="collapse panel-collapse" id="taxon-collapse">
          <div class="panel-body">
            {% include 'requetes/species.selector.html.twig' %}
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="radio">
            <label class="control-label">
              <input type='radio' name='reference' value="2" data-toggle="collapse" data-target="#method-form" data-parent="#form-accordion">
              <strong>Méthode moléculaire</strong>
              <i class="fa fa-spinner fa-spin pull-right hidden" id="method-spinner" style="font-size:16px"></i>
            </label>
          </div>
        </div>

        <div class="collapse panel-collapse" id="method-form" data-url="{{path('methodsindate')}}" data-spinner=".method-spinner">
          <div class="panel-body form-horizontal">
            {% include 'requetes/method.selector.html.twig' %}
          </div>
        </div>
      </div>

    </div>
    <div class="well well-sm">
      <input type="submit" value="Rechercher" class="btn btn-block btn-primary">
    </div>

  </fieldset>

</form>