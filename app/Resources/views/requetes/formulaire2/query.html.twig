{% extends 'formulaire2/index.html.twig' %}
{% block body %}
  {{ parent() }}
  <div class="table-responsive">
    <table id="table1" class="table table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th>TaxaName</th>
          <th>MotusLinkedToSpecie</th>
          <th>SpeciesLinkedToMotu</th>
          <th>Methode</th>
          <th>DateMethode</th>
        </tr>
      </thead>
      <tbody>
        {% for res in results %}
          <tr>
            <td>{{ res.espece }}</td>
            <td>
              <details>
                <summary>More</summary>
                <fieldset>{{ res.motu_in_esp }}</fieldset>
              </details>
            </td>
            <td>
              <details>
                <summary>More</summary>
                <fieldset>{{ res.esp_in_motu }}</fieldset>
              </details>
            </td>
            <td>{{ res.methode }}</td>
            <td>{{ res.date_methode }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}