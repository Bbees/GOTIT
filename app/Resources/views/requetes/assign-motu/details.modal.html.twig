{% extends "requetes/base.modal.html.twig" %}

{% block modal_body %}
  {% trans_default_domain 'requetes' %}
  <div class="table-responsive" style='width:100%'>
    <table
      id="details-table"
      data-url="{{ path('motu-modal') }}"
      data-locale="{{app.request.getLocale()}}"
      data-vocab-seq-int="{{ 'entity.seq.type.interne' | trans }}"
      data-vocab-seq-ext="{{ 'entity.seq.type.externe' | trans }}"
      class="table table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th
            id="col-code-seq"
            data-url-int="{{path('sequenceassemblee_show', {id:0}) | trim(0)}}"
            data-url-ext="{{path('sequenceassembleeext_show', {id:0}) | trim(0)}}">
            {{"columns.seqcode" | trans}}
          </th>
          <th>{{"columns.accession" | trans}}</th>
          <th>{{"columns.gene" | trans}}</th>
          <th>{{"columns.type" | trans}}</th>
          <th>{{"columns.motu" | trans}}</th>
          <th>{{"columns.critere" | trans}}</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
{% endblock %}

{% block extra_templates %}
  {# Mustache.js template for modal title #}
  {% verbatim %}
    <template id="modal-title">
      {{taxname}}
      <span class="label label-default">{{methode}}</span>
      <span class="label label-info">{{dataset}}</span>
    </template>
  {% endverbatim %}
{% endblock %}