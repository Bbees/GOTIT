{% endblock %}

{% block body %}  
    
    {# definition des collones à afficher 
     ! pour les collones sortable suffixer les nom de champs par le nom des tables nomTable.nomChamp #}
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="boite.id" data-type="numeric" data-visible="false" >Id</th>
                <th data-column-id="boite.codeBoite" data-sortable="true">{{'Code boite'|trans}}</th> 
                <th data-column-id="vocCodeCollection.code" data-sortable="true" data-visible="true">{{'Code collection voc fk'|trans}}</th> 
                <th data-column-id="boite.libelleBoite" data-sortable="true">{{'Libelle boite'|trans}}</th> 
                <th data-column-id="boite.libelleCollection" data-sortable="true" data-visible="false">{{'Libelle collection'|trans}}</th> 
                <th data-column-id="boite.dateMaj" data-width="100">{{'list.Date maj'|trans}}</th>
                <th data-column-id="boite.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false" data-width="20">Show</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false" data-width="20">Edit</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">Del</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}
