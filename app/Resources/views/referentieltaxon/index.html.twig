{% extends 'index.html.twig' %}
{#  REFERENTIEL TAXON #}

    {# initialise le tableau des entitées liées ([entity1,entity2 ... ])  vers lesquelles on souhaite faire un lien-racourcis  
    1) le tableau des resulatats devra comprendre un collonne du type : <th data-column-id="linkEntity" data-formatter="linkEntity" data-sortable="false">Col.</th>
    2) le controller devra renvoyer dans le tableau rows les collones du type :  "linkEntity1" => "patern1" ,  "linkeEntity2" => "patern2" ... #}
    {% set links =  [] %}

{% block action %}
    {{ parent() }}
{% endblock %}

{% block body %}         
    {# definition des collones à afficher 
     ! pour les collones sortable suffixer les nom de champs par le nom des tables nomTable.nomChamp #}
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="referentielTaxon.id" data-type="numeric" data-visible="false" >Id</th>
                <th data-column-id="referentielTaxon.taxname" data-sortable="true">{{'Taxname'|trans}}</th> 
                <th data-column-id="referentielTaxon.rank" data-sortable="true">{{'Rank'|trans}}</th> 
                <th data-column-id="referentielTaxon.family" data-sortable="true">{{'Family'|trans}}</th> 
                <th data-column-id="referentielTaxon.validity" data-sortable="true">{{'Validity'|trans}}</th> 
                <th data-column-id="referentielTaxon.codeTaxon" data-sortable="true">{{'Code taxon'|trans}}</th> 
                <th data-column-id="referentielTaxon.clade" data-sortable="true">{{'Clade'|trans}}</th> 
                <th data-column-id="referentielTaxon.dateMaj" data-width="100">{{'list.Date maj'|trans}}</th>
                <th data-column-id="referentielTaxon.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="referentielTaxon.userCre" data-width="10" data-visible="false">{{'list.User cre'|trans}}</th>
                <th data-column-id="referentielTaxon.userMaj" data-width="10" data-visible="false">{{'list.User maj'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false" data-width="20">Show</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false" data-width="20">Edit</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">Del</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}

