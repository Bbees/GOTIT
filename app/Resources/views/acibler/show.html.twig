{% extends 'base.html.twig' %}

{% block body %}
    <h1>Acibler</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aCibler.id }}</td>
            </tr>
            <tr>
                <th>Datecre</th>
                <td>{% if aCibler.dateCre %}{{ aCibler.dateCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datemaj</th>
                <td>{% if aCibler.dateMaj %}{{ aCibler.dateMaj|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Usercre</th>
                <td>{{ aCibler.userCre }}</td>
            </tr>
            <tr>
                <th>Usermaj</th>
                <td>{{ aCibler.userMaj }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('acibler_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('acibler_edit', { 'id': aCibler.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
