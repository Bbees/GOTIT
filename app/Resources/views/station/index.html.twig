{% extends 'index.html.twig' %}

    {# initialise le tableau des entitées liées ([entity1,entity2 ... ])  vers lesquelles on souhaite faire un lien-racourcis  
    1) le tableau des resulatats devra comprendre un collonne du type : <th data-column-id="linkEntity" data-formatter="linkEntity" data-sortable="false">Col.</th>
    2) le controller devra renvoyer dans le tableau rows les collones du type :  "linkEntity1" => "patern1" ,  "linkeEntity2" => "patern2" ...
    ?nameFk={{nameOfEntity}}Fk&idFk= #}
    {% set links =  ['collecte'] %}

{% block action %}
    {{ parent() }}
    {% if is_granted('ROLE_PROJECT') %}
        <a href="{{ path( route_importfiles ) }}" class="btn btn-primary btn-sm" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
    {% else %}
        <a href="#" class="btn btn-primary btn-sm" style="background-color:lightgrey" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
    {% endif %}
{% endblock %}

{% block body %}         
    {# definition des collones à afficher 
     ! pour les collones sortable suffixer les nom de champs par le nom des tables nomTable.nomChamp #}
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="station.id" data-type="numeric" data-visible="false" >Id</th>
                <th data-column-id="station.codeStation" data-sortable="true">{{'Code station'|trans}}</th>               
                <th data-column-id="station.nomStation" data-sortable="true">{{'Nom station'|trans}}</th>
                <th data-column-id="pays.codePays" data-sortable="true">{{'Code pays'|trans}}</th>
                <th data-column-id="commune.codeCommune" data-sortable="true">{{'Code commune'|trans}}</th>
                <th data-column-id="station.latDegDec" data-sortable="true">{{'list.Lat deg dec'|trans}}</th> 
                <th data-column-id="station.longDegDec" data-sortable="true">{{'list.Long deg dec'|trans}}</th> 
                <th data-column-id="station.dateMaj" data-width="100" data-visible="false">{{'list.Date maj'|trans}}</th>
                <th data-column-id="station.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="station.userCre" data-width="10" data-visible="false">{{'list.User cre'|trans}}</th>
                <th data-column-id="station.userMaj" data-width="10" data-visible="false">{{'list.User maj'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false" data-width="20">Show</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false" data-width="20">Edit</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">Del</th>
                <th data-column-id="linkCollecte" data-formatter="linkCollecte" data-sortable="false" data-width="20">Col</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}


