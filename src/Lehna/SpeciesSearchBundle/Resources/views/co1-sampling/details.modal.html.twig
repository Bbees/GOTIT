{% trans_default_domain 'queries' %}

{% extends "@LehnaSpeciesSearch/base.modal.html.twig" %}
{% block modal_title %}
    {{ taxname }}
{% endblock %}

{% block modal_body %}
    <div class="geo-container">
        <div id="station-geo-map" style="height:70vh;width:100%"></div>
    </div>
{% endblock %}

{% block modal_footer %}
    <form class="modal-footer-form">
        <div class="form-group">
            <label class="control-label">
                Marker radius
            </label>
            <input
                data-slider-id='marker-radius-slider'
                data-slider-max="12"
                data-slider-min="3"
                data-slider-step="1"
                data-slider-value="5"
                id="marker-radius-slider"
                type="text"/>
        </div>
        <div class="form-group">
            <label class="control-label">
                opacity
            </label>
            <input
                data-slider-id='marker-opacity-slider'
                data-slider-max="1"
                data-slider-min="0.1"
                data-slider-step="0.05"
                data-slider-value="1"
                id="marker-opacity-slider"
                type="text"/>
        </div>
    </form>
{% endblock %}

{% block extra_templates %}
    <template id="details-modal-title">
        {% trans from 'queries' %} queries.echantillonnage.title
        {% endtrans %} : {{"{{taxname}}"}}
    </template>

    <template id="leaflet-popup-template">
        {% verbatim %}
            <div class="station-popup">
                <label style="grid-column: 1 / span 2;">
                    <b>{{code_station}}</b>
                </label>
                <label>Lat:</label>
                <span>{{latitude}}</span>
                <label>Lon:</label>
                <span>{{longitude}}</span>
                <label>Alt:</label>
                <span>{{altitude}} m</span>
                <span style="grid-column: 1 / span 2;text-align:right">{{commune}}</span>
                <span style="grid-column: 1 / span 2;text-align:right">{{pays}}</span>
            </div>
        {% endverbatim %}
    </template>

    <template id="bio-mat-ext-legend">
        <span>Bio. mat. (ext)</span>
        <svg height="16px" width="16px">
            <circle
                cx="8"
                cy="8"
                fill="none"
                r="5"
                stroke-dasharray="3"
                stroke-width="3"
                stroke="cyan"/>
        </svg>
    </template>

    <template id="bio-mat-legend">
        <span>Bio. mat. (int)</span>
        <svg height="16px" width="16px">
            <circle cx="8" cy="8" fill="none" r="5" stroke-width="3" stroke="orangered"/>
        </svg>
    </template>

    <template id="co1-legend">
        <span>CO1 sample</span>
        <svg height="16px" width="16px">
            <circle cx="8" cy="8" fill="lime" r="5" stroke-width="1" stroke="black"/>
        </svg>
    </template>

    <template id="lmp-legend">
        <span>Lat. Mid-Point</span>
        <svg height="18" version="1.1" width="30" xmlns="http://www.w3.org/2000/svg">
            <line
                stroke-dasharray="4, 4"
                style="stroke-width: 1px;stroke:white"
                x1="0"
                x2="30"
                y1="9"
                y2="9"></line>
        </svg>

    </template>
{% endblock %}
