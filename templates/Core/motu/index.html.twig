{% extends 'index.html.twig' %}

{# INDEX : MOTU #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links =  [] %}

	{% block action %}

		<a href="{{ path(route_index) }}" class="btn btn-primary btn-sm" role="button"> <i class="fas fa-list"></i>
		{{'button.showAllRecord'|trans}}
	</a>

	{% if is_granted('ROLE_ADMIN') %}
		{% if varUrl_nameFk is defined and  varUrl_nameFk != '' %}
			<a href="{{ path( route_new ) }}?nameFk={{varUrl_nameFk}}&idFk={{varUrl_idFk}}" class="btn btn-success btn-sm" role="button">
				<i class="fa fa-plus"></i>
				{{['button.New',entityname|capitalize]|join|trans}}
			</a>
		{% else %}
			<a href="{{ path( route_new ) }}" class="btn btn-success btn-sm" role="button">
				<i class="fa fa-plus"></i>
				{{['button.New',entityname|capitalize]|join|trans}}
			</a>
		{% endif %}
	{% else %}
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			<i class="fa fa-plus"></i>
			{{['button.New',entityname|capitalize]|join|trans}}
		</a>
	{% endif %}
	{% if is_granted('ROLE_COLLABORATION') %}
		<button class="btn btn-primary btn-sm" id="export" data-export="export" data-toggle="tooltip" data-align="right" title="{{'button.exportToCSV-title'|trans}}">
			{{'button.exportToCSV'|trans}}</button>
	{% endif %}
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path( route_importfiles ) }}" class="btn btn-light border btn-sm" role="button">
			<i class="fas fa-upload"></i>
			{{['button.Import',entityname|capitalize]|join|trans}}</a>
	{% else %}
		<i class="fas fa-upload"></i>
		<a href="#" class="btn btn-secondary btn-sm disabled" role="button">
			{{['button.Import',entityname|capitalize]|join|trans}}</a>
	{% endif %}
{% endblock %}

{% block body %}
	<div class="table-responsive">
		<table id="grid-basic" class="table table-condensed table-hover table-striped">
			<thead>
				<tr>
					<th data-column-id="motu.id" data-type="numeric" data-visible="false">Id</th>
					<th data-column-id="motu.libelleMotu" data-visible="true">
						{{'Libelle motu'|trans}}</th>
					<th data-column-id="motu.nomFichierCsv" data-visible="true">
						{{'Nom fichier csv'|trans}}</th>
					<th data-column-id="motu.dateMotu" data-sortable="true" data-visible="true">
						{{'Date motu'|trans}}</th>
					<th
						data-column-id="motu.commentaireMotu"
						data-sortable="true"
						data-visible="true">{{'Commentaire motu'|trans}}</th>
					<th data-column-id="listePersonne" data-sortable="false" data-visible="true">
						{{'list.Liste personnes'|trans}}</th>
					<th data-column-id="motu.dateMaj" data-width="100">
						{{'list.Date maj'|trans}}</th>
					<th data-column-id="motu.dateCre" data-width="100" data-visible="false">
						{{'list.Date cre'|trans}}</th>
					<th data-column-id="motu.userCre" data-width="10" data-visible="false">
						{{'list.User cre'|trans}}</th>
					<th data-column-id="motu.userMaj" data-width="10" data-visible="false">
						{{'list.User maj'|trans}}</th>
					<th
						data-column-id="show"
						data-formatter="show"
						data-sortable="false"
						data-width="20">{{'list.show'|trans}}</th>
					<th
						data-column-id="edit"
						data-formatter="edit"
						data-sortable="false"
						data-width="20">{{'list.edit'|trans}}</th>
					<th
						data-column-id="delete"
						data-formatter="delete"
						data-sortable="false"
						data-width="20">{{'list.delete'|trans}}</th>
				</tr>
			</thead>
		</table>
	</div>
{% endblock %}
