{% extends 'SpeciesSearch/base.queries.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('spsearch/distribution') }}
	<!-- Modal window styles -->
	<link
	href="{{ asset('bundles/lehnaspeciessearch/css/modal.css') }}" rel="stylesheet">
	<!-- Maps styles -->
	<link href="{{ asset('bundles/lehnaspeciessearch/css/leaflet-maps.css') }}" rel="stylesheet">
{% endblock %}

{% block titlepage %}
	<h1>
		{% trans from 'queries' %}
		queries.distribution.title
		{% endtrans %}
	</h1>
{% endblock %}

{% block body %}

	{# Formulaire #}
	{% include 'SpeciesSearch/motu-distribution/form.html.twig' %}

	<hr>
	<div>
		<h2 id="results-title">
			<span>
				{% trans from 'queries' %}
				label.resultats
				{% endtrans %}
			</span>
		</h2>
		{% include 'SpeciesSearch/motu-distribution/results.html.twig' with methods_list %}
	</div>
	<div id="modal-container">
		{% include 'SpeciesSearch/motu-distribution/seq.modal.html.twig' %}
	</div>
{% endblock %}

{% block scripts %}

	{{ parent() }}
	{{ encore_entry_script_tags('spsearch/distribution') }}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/chroma-js/2.0.4/chroma.min.js"></script>
{% endblock %}
