{% trans_default_domain 'queries' %}
<form id="main-form" class="mb-5" action="#">
	<div class="row mb-3">
		<div class="col-12 col-lg-8 offset-lg-2">
			<div class="card panel-default">
				<div class="card-header">
					<strong>
						{% trans %} label.search.constraints {% endtrans %}
					</strong>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-12 col-sm-4">
							<label for="lot-materiel" class="col-form-label">
								{% trans %} entity.biomaterial.label
								{% endtrans %}
							</label>
							<select
								name="lot-materiel"
								id="lot-materiel-select"
								class="form-control concordance selectpicker">
								{% include 'SpeciesSearch/taxon-consistency/select.options.html.twig' %}
							</select>
						</div>
						<div class="col-12 col-sm-4">
							<label for="individu" class="col-form-label">
								{% trans %} entity.individu.label
								{% endtrans %}
							</label>
							<select
								name="individu"
								id="individu-select"
								class="form-control concordance selectpicker">
								{% include 'SpeciesSearch/taxon-consistency/select.options.html.twig' %}
							</select>
						</div>
						<div class="col-12 col-sm-4">
							<label for="sequence" class="col-form-label">
								{% trans %} entity.seq.label
								{% endtrans %}
							</label>
							<select
								name="sequence"
								id="sequence-select"
								class="form-control concordance selectpicker">
								{% include 'SpeciesSearch/taxon-consistency/select.options.html.twig' with {
                  unassigned : true
                } %}
							</select>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<center>
		<button type="submit" value="Rechercher" class="btn btn-primary btn-lg" id="submit-button" data-loading-text="<i class='fas fa-spinner fa-spin'>">
			{% trans from 'queries' %} label.search.bouton {% endtrans %}
		</button>
	</center>
</form>
