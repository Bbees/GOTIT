{# Species hypotheses query results #}

{% trans_default_domain 'queries' %}

<fieldset id="results">
	<legend>
		<h3>
			{% trans %} label.resultats {% endtrans %}
		</h3>
	</legend>

	<div id="result-accordion">
		<div
			class="collapse result-collapse row recto show"
			data-parent="#result-accordion">
			<div class="col-12 col-xl-8 offset-xl-2">
				<div id="barplot-recto" class="barplot">
					<center>
						<i class="fas fa-spin fa-spinner fa-4x m-5"></i>
					</center>
				</div>
			</div>
			<hr>
			<div class="table-responsive col-12">
				<table
					id="result-table-recto"
					class="table table-condensed table-hover table-striped"
					data-barplot="#barplot-recto"
					data-target="recto">
					<thead>
						<tr>
							<th>{{"columns.method"|trans}}</th>
							<th>{{"columns.dataset"|trans}}</th>
							<th>{{"columns.match"|trans}}</th>
							<th>{{"columns.split"|trans}}</th>
							<th>{{"columns.lump"|trans}}</th>
							<th>{{"columns.reshuffling"|trans}}</th>
							<th>{{"columns.nbseq"|trans}}</th>
							<th>{{"columns.nbsta"|trans}}</th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
			</div>
		</div>
		<div class="collapse result-collapse" data-parent="#result-accordion">
			<div class="col-12 col-xl-8 offset-xl-2">
				<div id="barplot-verso" class="barplot">
				<center>
						<i class="fas fa-spin fa-spinner fa-4x m-5"></i>
					</center></div>
			</div>
			<hr>
			<div class="table-responsive col-12">
				<table
					id="result-table-verso"
					class="table table-condensed table-hover table-striped"
					data-barplot="#barplot-verso"
					data-target="verso">
					<thead>
						<tr>
							<th>{{"columns.method"|trans}}</th>
							<th>{{"columns.dataset"|trans}}</th>
							<th>{{"columns.match"|trans}}</th>
							<th>{{"columns.split"|trans}}</th>
							<th>{{"columns.lump"|trans}}</th>
							<th>{{"columns.reshuffling"|trans}}</th>
							<th>{{"columns.nbseq"|trans}}</th>
							<th>{{"columns.nbsta"|trans}}</th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
			</div>
		</div>
	</div>
</fieldset>
