{% trans_default_domain 'queries' %}
<div id="detailsModal" class="modal fade" role="dialog" tabindex="-1">
	<div class="modal-dialog modal-lg {{class | default(" ") }}" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title"> {% block modal_title %}{% endblock %}
					</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<div class="modal-body"> {% block modal_body %}{% endblock %}
					</div>
					{% block modal_footer %}
						<div class="modal-footer">
							{% block modal_footer_content %}{% endblock %}
							<button type="button" class="btn btn-light border close-modal" data-dismiss="modal">
								{% trans %}
								ui.close
								{% endtrans %}
							</button>
						</div>
					{% endblock %}
				</div>
			</div>
			{% block extra_templates %}{% endblock %}
		</div>
